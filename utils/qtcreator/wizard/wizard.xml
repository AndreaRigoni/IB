<wizard version="1" class="qt4project" firstpage="10" kind="project" id="A.IBAnalyzerEM" category="B.MutomExperiments">
    <description>Creates a simple project using a generator script for Muon tomography experiments</description>
    <displayname>Simple Script-Generated Project for Mutom</displayname>;
    <displaycategory>Muon Tomography Projects</displaycategory>
    <!-- Create parameter wizard page -->
    <fieldpagetitle>Muon Tomography Project Parameters</fieldpagetitle>

    <files>
        <file source="IBAnalyzerEMTest.cpp" openeditor="true"/>
	<file source="project.pro" target="%ProjectName%.pro" openproject="true"/>
        <file source="Makefile.qt.in" target="Makefile" />
    </files>



    <fields>


    <field name="ROOTPATH">
        <fieldcontrol class="Utils::PathChooser" defaulttext="/var/local/data/root/" />
        <fielddescription>Root path in:</fielddescription>
    </field>
    <field name="ROOTFILENAME">
	<fieldcontrol class="QLineEdit" defaulttext="filename" />
	<fielddescription>Root file name :</fielddescription>
    </field>
    <field name="OUTFILENAME">
        <fieldcontrol class="QLineEdit" validator="^[a-zA-Z0-9_]+$" defaulttext="MyClass" />
        <fielddescription>Vtk out name:</fielddescription>
    </field>
        <!-- Description will be inserted as a multi-line C++-comment -->
        <field name="Description">
            <fieldcontrol class="QTextEdit" defaulttext="Enter description" />
            <fielddescription>Description:</fielddescription>
        </field>
    </fields>
</wizard>
